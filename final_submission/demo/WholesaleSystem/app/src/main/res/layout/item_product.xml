<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="25dp"
    android:id="@+id/layout"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        android:background="#E5E0DA"
        android:layout_width="match_parent"
        android:layout_height="500dp" >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:layout_alignBottom="@id/textdesc"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="230dp"
            android:adjustViewBounds="true" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/textdesc"
        android:background="@color/white"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/category"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/worksanr"
            android:textColor="#888E9A"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/date"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/worksanr"
            android:textColor="#888E9A"
            android:textSize="14sp" />

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/name"
            android:layout_marginStart="25dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/worksansemi"
            android:textColor="#24243F"
            android:textSize="25sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:layout_width="220dp"
        android:id="@+id/desc"
        android:lineSpacingExtra="3dp"
        android:minLines="5"
        android:justificationMode="inter_word"
        android:layout_marginStart="25dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksanr"
        android:textColor="#888E9A"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/quantity"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/worksans"
        android:textColor="#B15151"
        android:textSize="16sp" />
</LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/price"
            android:layout_marginStart="25dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/worksans"
            android:textColor="#51B1A6"
            android:textSize="16sp" />

    </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

