<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".admin.ProductActivity">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/add"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Add New Product"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="25dp"
            tools:context=".MainActivity">

                <ImageView
                    android:id="@+id/all"
                    android:layout_height="55dp"
                    android:layout_width="55dp"
                    android:padding="5dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/all"
                    />
                <ImageView
                    android:id="@+id/i1"
                    android:layout_height="55dp"
                    android:layout_width="55dp"
                   android:layout_margin="15dp"
                    android:padding="5dp"
                    android:src="@drawable/i1"
                    />

                <ImageView
                    android:id="@+id/i2"
                    android:layout_height="55dp"
                    android:layout_width="55dp"
                    android:padding="5dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/i2"
                    />

                <ImageView
                    android:id="@+id/i3"
                    android:layout_height="55dp"
                    android:layout_width="55dp"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/i3"
                    />

                <ImageView
                    android:id="@+id/i4"
                    android:layout_height="55dp"
                    android:layout_width="55dp"
                    android:padding="5dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/i4"
                    />

                <ImageView
                    android:id="@+id/i5"
                    android:layout_height="55dp"
                    android:layout_width="55dp"
                    android:padding="5dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/i5"
                    />

                <ImageView
                    android:id="@+id/i6"
                    android:layout_height="55dp"
                    android:layout_width="55dp"
                    android:padding="5dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/i6"
                    />
                <ImageView
                    android:id="@+id/i7"
                    android:layout_height="55dp"
                    android:padding="5dp"
                    android:layout_width="55dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/i7"
                    />
        </GridLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            tools:listitem="@layout/item_product"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/philosopher"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#002140"
            android:text="No Product Available" />
</LinearLayout>
